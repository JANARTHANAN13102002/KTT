doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    title Asset Management
    // <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.2.3/css/bootstrap.min.css">
    link(rel='stylesheet', href='/css/styles.css')
    script(src='https://use.fontawesome.com/releases/v6.3.0/js/all.js', crossorigin='anonymous')
  body.sb-nav-fixed
    nav.sb-topnav.navbar.navbar-expand.navbar-dark.bg-dark
      // Navbar Brand
      a.navbar-brand.ps-3(href='/') Asset Management
      // Sidebar Toggle
      button#sidebarToggle.btn.btn-link.btn-sm.order-1.order-lg-0.me-4.me-lg-0(href='#!')
        i.fas.fa-bars
      // Navbar Search
      form.d-none.d-md-inline-block.form-inline.ms-auto.me-0.me-md-3.my-2.my-md-0
        .input-group
          input.form-control(type='text', placeholder='Search for...', aria-label='Search for...', aria-describedby='btnNavbarSearch')
          button#btnNavbarSearch.btn.btn-primary(type='button')
            i.fas.fa-search
      // Navbar
      ul.navbar-nav.ms-auto.ms-md-0.me-3.me-lg-4
        li.nav-item.dropdown
          a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
            i.fas.fa-user.fa-fw
          ul.dropdown-menu.dropdown-menu-end(aria-labelledby='navbarDropdown')
            li
              a.dropdown-item(href='#!') Settings
            li
              a.dropdown-item(href='#!') Activity Log
            li
              hr.dropdown-divider
            li
              a.dropdown-item(href='#!') Logout
    #layoutSidenav
      #layoutSidenav_nav
        nav#sidenavAccordion.sb-sidenav.accordion.sb-sidenav-dark
          .sb-sidenav-menu
            .nav
              a.nav-link(href='/dashboard')
                .sb-nav-link-icon
                  i.fas.fa-tachometer-alt
                  |  Dashboard
              a.nav-link(href='/category')
                .sb-nav-link-icon
                  i.fas.fa-server
                  |  Asset Categories 
              a.nav-link(href='/employee')
                .sb-nav-link-icon
                  i.fas.fa-users
                  |  Employee Details
              a.nav-link(href='/asset')
                .sb-nav-link-icon
                  i.fas.fa-wallet
                  |  Asset Master
              a.nav-link(href='/assethistory')
                .sb-nav-link-icon
                  i.fas.fa-save
                  |  Asset Histories

      // Table Creation
      #layoutSidenav_content
        main
          .container-fluid.px-4
            h1.mt-4 Employee Tables
            // Button to trigger modal
            #form1
              button#form1.btn.btn-primary.btn-sm.float-right(type='button', data-bs-toggle='modal', data-bs-target='#employeeFormModal')
                | Add Employee Details
            .card.mb-4
              .card-body
                table#employee_master.table.table-bordered
                  thead
                    tr
                      th Id
                      th Name
                      th Email ID
                      th Age
                      th Mobile
                      th Address
                      th Role
                      th Blood Group
                      th Salary
                      th Status
                      th Action
    #layoutSidenav_content
      main
        // Modal
        #employeeFormModal.modal.fade(tabindex='-1', aria-labelledby='exampleModalLabel', aria-hidden='true')
          .modal-dialog
            .modal-content
              .modal-header
                h5#exampleModalLabel.modal-title Employee Form
                button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
              .modal-body
                form#employeeForm
                  .mb-3
                    label.form-label(for='name') Name
                    input#name.form-control(type='text', name='name', required='')
                  .mb-3
                    label.form-label(for='email') Email
                    input#email.form-control(type='email', name='email', required='')
                  .mb-3
                    label.form-label(for='age') Age
                    input#age.form-control(type='number', name='age', required='')
                  .mb-3
                    label.form-label(for='mobile') Mobile
                    input#mnumber.form-control(type='tel', name='mnumber', required='')
                  .mb-3
                    label.form-label(for='address') Address
                    input#address.form-control(type='text', name='address', required='')
                  .mb-3
                    label.form-label(for='role') Role
                    input#role.form-control(type='text', name='role', required='')
                  .mb-3
                    label.form-label(for='bloodGroup') Blood Group
                    input#bgroup.form-control(type='text', name='bgroup', required='')
                  .mb-3
                    label.form-label(for='salary') Salary
                    input#salary.form-control(type='number', name='salary', required='')
                  .mb-3
                    label.form-label(for='status') Status
                    input#status.form-control(name='status', type='Number', required='')
                  .modal-footer
                    button.btn.btn-secondary(type='button', data-bs-dismiss='modal') Close
                    button.btn.btn-primary(type='submit') Submit
    #layoutSidenav_content
      main
        // Modal
        #editmodalId.modal.fade(tabindex='-1', aria-labelledby='exampleModalLabel', aria-hidden='true')
          .modal-dialog
            .modal-content
              .modal-header
                h5#exampleModalLabel.modal-title Edit Employee Form
                button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
              .modal-body
                form#UpdateEmployee
                  .mb-3
                    label.form-label(for='name') Name
                    input#editname.form-control(type='text', name='editname', required='')
                  .mb-3
                    label.form-label(for='email') Email
                    input#editemail.form-control(type='email', name='editemail', required='')
                  .mb-3
                    label.form-label(for='age') Age
                    input#editage.form-control(type='number', name='editage', required='')
                  .mb-3
                    label.form-label(for='mobile') Mobile
                    input#editmobile.form-control(type='tel', name='editmnumber', required='')
                  .mb-3
                    label.form-label(for='address') Address
                    input#editaddress.form-control(type='text', name='editaddress', required='')
                  .mb-3
                    label.form-label(for='role') Role
                    input#editrole.form-control(type='text', name='editrole', required='')
                  .mb-3
                    label.form-label(for='bloodGroup') Blood Group
                    input#editbgroup.form-control(type='text', name='editbgroup', required='')
                  .mb-3
                    label.form-label(for='salary') Salary
                    input#editsalary.form-control(type='number', name='editsalary', required='')
                  .mb-3
                    label.form-label(for='status') Status
                    input#editstatus.form-control(type='number', name='editstatus')
                  .modal-footer
                    button.btn.btn-secondary(type='button', data-bs-dismiss='modal') Close
                    button.btn.btn-primary(type='submit', data-bs-dismiss='modal', aria-label='Close') Submit
