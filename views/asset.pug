doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    title Asset Management
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/5.2.3/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/styles.css')
    script(src='https://use.fontawesome.com/releases/v6.3.0/js/all.js', crossorigin='anonymous')
  body.sb-nav-fixed
    nav.sb-topnav.navbar.navbar-expand.navbar-dark.bg-dark
      // Navbar Brand
      a.navbar-brand.ps-3(href='/') Asset Management
      // Sidebar Toggle
      button#sidebarToggle.btn.btn-link.btn-sm.order-1.order-lg-0.me-4.me-lg-0(href='#!')
        i.fas.fa-bars
      // Navbar Search
      form.d-none.d-md-inline-block.form-inline.ms-auto.me-0.me-md-3.my-2.my-md-0
        .input-group
          input.form-control(type='text', placeholder='Search for...', aria-label='Search for...', aria-describedby='btnNavbarSearch')
          button#btnNavbarSearch.btn.btn-primary(type='button')
            i.fas.fa-search
      // Navbar
      ul.navbar-nav.ms-auto.ms-md-0.me-3.me-lg-4
        li.nav-item.dropdown
          a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
            i.fas.fa-user.fa-fw
          ul.dropdown-menu.dropdown-menu-end(aria-labelledby='navbarDropdown')
            li
              a.dropdown-item(href='#!') Settings
            li
              a.dropdown-item(href='#!') Activity Log
            li
              hr.dropdown-divider
            li
              a.dropdown-item(href='#!') Logout
    #layoutSidenav
      #layoutSidenav_nav
        nav#sidenavAccordion.sb-sidenav.accordion.sb-sidenav-dark
          .sb-sidenav-menu
            .nav
              a.nav-link(href='/dashboard')
                .sb-nav-link-icon
                  i.fas.fa-tachometer-alt
                  |  Dashboard
              a.nav-link(href='/category')
                .sb-nav-link-icon
                  i.fas.fa-server
                  |  Asset Categories
              a.nav-link(href='/employee')
                .sb-nav-link-icon
                  i.fas.fa-users
                  |  Employee Details
              a.nav-link(href='/asset')
                .sb-nav-link-icon
                  i.fas.fa-wallet
                  |  Asset Master
              a.nav-link(href='/assethistory')
                .sb-nav-link-icon
                  i.fas.fa-save
                  |  Asset Histories
                  
    #layoutSidenav_content
      main
        // Modal
        #employeeFormModal.modal.fade(tabindex='-1', aria-labelledby='exampleModalLabel', aria-hidden='true')
          .modal-dialog
            .modal-content
              .modal-header
                h5#exampleModalLabel.modal-title Asset Form
                button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
              .modal-body
                form#createassetForm
                  .mb-3
                    label.form-label(for='snumber') Serial Number
                    input#createsnumber.form-control(type='number', name='createsnumber', required='')
                  .mb-3
                    label.form-label(for='createaname1') Asset Name
                    select#createaname1.form-control(name='createaname1', required='')
                  .mb-3
                    label.form-label(for='bname') Brand Name
                    input#createbname.form-control(type='text', name='createbname', required='')
                  .mb-3
                    label.form-label(for='mname') Model
                    input#createmname.form-control(type='text', name='createmname', required='')
                  .mb-3
                    label.form-label(for='acost') Asset Cost
                    input#createacost.form-control(type='number', name='createacost', required='')
                  .modal-footer
                    button.btn.btn-secondary(type='button', data-bs-dismiss='modal') Close
                    button.btn.btn-primary(type='submit') Submit

    // Table Creation
    #layoutSidenav
      #layoutSidenav_content
        main
          .container-fluid.px-4
            h1.mt-4 Asset Table
            // Button to trigger modal
            #form1
              button#form1.btn.btn-primary.btn-sm.float-right(type='button', data-bs-toggle='modal', data-bs-target='#employeeFormModal')
                | Add Asset Details
            .card.mb-4
              .card-body.custom-card-width
                table#asset_master.table.table-bordered
                  thead
                    tr
                      th Id
                      th Serial Number
                      th Asset Name
                      th Brand Name
                      th Model
                      th Asset Cost
                      th Action

    // Edit Form
    #editmodalId.modal.fade(tabindex='-1', aria-labelledby='exampleModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            h5#exampleModalLabel.modal-title Edit Asset Form
            button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
          .modal-body
            form#AssetForm
              .mb-3
                label.form-label(for='snumber') Serial Number
                input#editsnumber.form-control(type='number', name='editsnumber', required='')
              .mb-3
                label.form-label(for='ename') Asset Name
                select#editaname2.form-control(name='editaname2', required='')
              .mb-3
                label.form-label(for='bname') Brand Name
                input#editbname.form-control(type='text', name='editbname', required='')
              .mb-3
                label.form-label(for='mname') Model
                input#editmname.form-control(type='text', name='editmname', required='')
              .mb-3
                label.form-label(for='acost') Asset Cost
                input#editacost.form-control(type='number', name='editacost', required='')
              .modal-footer
                button.btn.btn-secondary(type='button', data-bs-dismiss='modal') Close
                button.btn.btn-primary(type='submit') Submit

    // Issue Form
    #layoutSidenav_content
      main
        // Modal
        #issuemodalId.modal.fade(tabindex='-1', aria-labelledby='exampleModalLabel', aria-hidden='true')
          .modal-dialog
            .modal-content
              .modal-header
                h5#exampleModalLabel.modal-title Issue Form
                button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
              .modal-body
                form#issueassetForm
                  //
                    <div class="mb-3">
                    <label for="issueid" class="form-label">Employee ID</label>
                    <select name="issueid" id="issueid" class="form-control" required>
                    </select>
                    </div>
                  .mb-3
                    label.form-label(for='issuename') Employee Name
                    select#issuename.form-control(name='issuename', required='')
                  .mb-3
                    label.form-label(for='idate') Issue Date
                    input#idate.form-control(type='date', name='idate', required='')
                  .modal-footer
                    button.btn.btn-secondary(type='button', data-bs-dismiss='modal') Close
                    button.btn.btn-primary(type='submit') Submit
    // Return Form
    #layoutSidenav_content
      main
        // Modal
        #returnmodalId.modal.fade(tabindex='-1', aria-labelledby='exampleModalLabel', aria-hidden='true')
          .modal-dialog
            .modal-content
              .modal-header
                h5#exampleModalLabel.modal-title Return Form
                button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
              .modal-body
                form#returnassetForm
                  .mb-3
                    label.form-label(for='returnissuedate') Issue Date
                    input#returnissuedate.form-control(type='text', name='returnissuedate', readonly='')
                  .mb-3
                    label.form-label(for='returndate') Return Date
                    input#returndate.form-control(type='date', name='returndate')
                  .mb-3
                    label.form-label(for='notes') Reason
                    input#notes.form-control(type='text', name='notes')
                  .modal-footer
                    button.btn.btn-secondary(type='button', data-bs-dismiss='modal') Close
                    button.btn.btn-primary(type='submit') Submit
    // Scarp Form
    #layoutSidenav_content
      main
        #scarpmodalId.modal.fade(tabindex='-1', aria-labelledby='exampleModalLabel', aria-hidden='true')
          .modal-dialog
            .modal-content
              .modal-header
                h5#exampleModalLabel.modal-title Scrap Form
                button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
              .modal-body
                form#AssetScarpForm.select()
                  .mb-3
                    label.form-label(for='Employeeid') Employee Name
                    select#Employeeid.form-control(name='Employeeid', required='')
                  .mb-3
                    label.form-label(for='scarpassetname') Asset Name
                    input#scarpassetname.form-control(name='scarpassetname', readonly='')
                  .mb-3
                    label.form-label(for='pdate') Purchase Date
                    input#pdate.form-control(type='text', name='pdate', required='')
                  .mb-3
                    label.form-label(for='sdate') Scrap Date
                    input#scrapdate.form-control(type='date', name='sdate', required='')
                  .mb-3
                    label.form-label(for='reason') Reason
                    input#reason.form-control(type='text', name='reason', value='Scarp')
                  .modal-footer
                    button.btn.btn-secondary(type='button', data-bs-dismiss='modal') Close
                    button.btn.btn-primary(type='submit') Submit

    

      

      

